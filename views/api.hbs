<table class="table table-striped table-dark" style="margin-top: 100px;">
    <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">name</th>
            <th scope="col">email</th>
            <th scope="col">address</th>
        </tr>
    </thead>
    <tbody>
        {{#each json}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/user/{{id}}" class="list-group-item list-group-item-action list-group-item-dark">{{name}}</a></td>
            <td>{{email}}</td>
            <td><table class="table table-striped table-dark"><tr>
                <th>street</th>
                <th>suite</th>
                <th>city</th>
                <th>zipcode</th>
            </tr>
                <tr>
                {{#with address}}
                <td>{{street}}</td>
                <td>{{suite}}</td>
                <td>{{city}}</td>
                <td>{{zipcode}}</td>
                {{/with}}
            </tr></table></td>
        </tr>
        {{/each}}
    </tbody>
</table>